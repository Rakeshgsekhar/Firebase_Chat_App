<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent"
    tools:context="com.webatron.rakesh.phoneauthentication.LaunchActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45px"
        android:text="Welcome to SnowChat"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:fontFamily="@font/ubuntumedium"
        android:textSize="25sp"/>
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/intro"
        android:textColor="#ffffff"
        android:text="Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Aenean commodo "
        android:textAlignment="center"
        android:fontFamily="@font/ubunturegular"
        android:textSize="18sp"/>

    <Button
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/enter"
        android:layout_below="@id/intro"
        android:layout_centerInParent="true"
        android:padding="10dp"
        android:textColor="@color/colorPrimary"
        android:fontFamily="@font/ubunturegular"
        android:background="@drawable/lanchbutn"
        android:text="Enter App Domain"/>
    <Button
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:fontFamily="@font/lauchheading"
        android:layout_height="wrap_content"
        android:id="@+id/leave"
        android:text="I'M Not INterested"
        android:layout_below="@id/enter"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:background="@drawable/leavebtn"/>
</RelativeLayout>
